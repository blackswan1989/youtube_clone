extends layouts/main

block content 
    .form-container
        form.form__changePassword(action=`/users${routes.changePassword}`, method="post")
            input.title(type="password", name="oldPasswod", placeholder="Current Password")
            input.title(type="password", name="newPassword", placeholder="New Password")
            input.title(type="password", name="newPassword1", placeholder="Verify New Password")
        .form-container__link-column
            <i class="fas fa-user-lock"></i>
            input.link__changePassword(type="submit", value="Change Password") 
            <i class="fas fa-key"></i>

